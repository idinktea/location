<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>获取用户地理位置</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      margin-top: 50px;
    }
    #location {
      margin-top: 20px;
      font-size: 18px;
      color: #333;
    }
    #error {
      color: red;
    }
  </style>
</head>
<body>

  <button onclick="getLocation()">点击获取位置</button>

  <div id="location"></div>
  <div id="error"></div>

  <script>
    function getLocation() {
      const locationDiv = document.getElementById("location");
      const errorDiv = document.getElementById("error");

      // 清空上次的结果
      locationDiv.innerHTML = "";
      errorDiv.innerHTML = "";

      // 检查浏览器是否支持 Geolocation API
      if (navigator.geolocation) {
        // 获取当前位置
        navigator.geolocation.getCurrentPosition(
          function(position) {
            // 成功获取位置
            const latitude = position.coords.latitude;
            const longitude = position.coords.longitude;
            const altitude = position.coords.altitude;
            const accuracy = position.coords.accuracy;

            // locationDiv.innerHTML = `
            //   <p>纬度: ${latitude.toFixed(6)}</p>
            //   <p>经度: ${longitude.toFixed(6)}</p>
            //   <p>海拔: ${altitude ? altitude.toFixed(2) + ' 米' : '不可用'}</p>
            //   <p>精度: ±${accuracy} 米</p>
            // `;
            locationDiv.innerHTML = `
              <p>${latitude},${longitude}</p>
              <p>精度: ±${accuracy} 米</p>
            `;
          },
          function(error) {
            // 获取位置失败
            switch(error.code) {
              case error.PERMISSION_DENIED:
                errorDiv.innerHTML = "用户拒绝了地理位置请求。";
                break;
              case error.POSITION_UNAVAILABLE:
                errorDiv.innerHTML = "位置信息不可用。";
                break;
              case error.TIMEOUT:
                errorDiv.innerHTML = "获取位置信息超时。";
                break;
              case error.UNKNOWN_ERROR:
                errorDiv.innerHTML = "发生未知错误。";
                break;
            }
          },
          {
            enableHighAccuracy: true,  // 启用高精度定位（如 GPS）
            timeout: 10000,            // 超时时间（毫秒）
            maximumAge: 0              // 不使用缓存数据
          }
        );
      } else {
        // 浏览器不支持 Geolocation API
        errorDiv.innerHTML = "您的浏览器不支持地理位置功能。";
      }
    }
  </script>

</body>
</html>
